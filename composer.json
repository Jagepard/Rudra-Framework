{
    "name"             : "rudra/framework",
    "description"      : "Rudra framework",
    "type"             : "library",
    "keywords"         : [
        "rudra",
        "framework",
        "mvc-framework",
        "mvc-pattern",
        "mvc-architecture",
        "mvc"
    ],
    "license"          : "MIT",
    "authors"          : [
        {
            "name"    : "Jagepard",
            "email"   : "jagepard@yandex.ru",
            "homepage": "https://jagepard.ru",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "email": "jagepard@yandex.ru",
        "skype": "jagepard.ru"
    },
    "autoload"         : {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require"          : {
        "php"                : ">=7.4",
        "filp/whoops"        : "^2.9",
        "ext-fileinfo"       : "*",
        "ext-pdo"            : "*",
        "symfony/var-dumper" : "*",
        "phpmailer/phpmailer": "dev-master",
        "maximebf/debugbar"  : "dev-master",
        "symfony/yaml": "5.4.*"
    },
    "require-dev"      : {
        "rudra/event-dispatcher": "9999999-dev",
        "rudra/validation"      : "9999999-dev",
        "rudra/cli"             : "dev-main",
        "rudra/pagination"      : "dev-master",
        "rudra/oauth-client"    : "dev-master",
        "rudra/exception"       : "dev-master",
        "rudra/controller"      : "dev-master",
        "rudra/router"          : "dev-master",
        "rudra/container"       : "dev-master",
        "rudra/redirect"        : "dev-master",
        "rudra/annotation"      : "dev-master",
        "rudra/view"            : "dev-master",
        "rudra/model"           : "dev-master"
    },
    "minimum-stability": "dev",
    "config"           : {
        "optimize-autoloader": true,
        "prefer-stable"      : true
    }
}
